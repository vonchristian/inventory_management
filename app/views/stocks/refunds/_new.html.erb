<%=simple_form_for @refund do |f| %>
<%=f.error_notification %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Refund Details</h4>
      </div>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>
        <%= f.input :date, as: :string, input_html: { class: 'datepicker'} %>
        <%= f.input :stock_id, collection: Stock.all.map{ |a| [ a.name, a.id]} %>
        <%= f.input :quantity %>
        <%= f.input :amount %>
        <%= f.input :remarks, as: :text %>
      </div>
      <div class="modal-footer">
        <%= link_to "Cancel", "#", class: "btn btn-default pull-left", data: {dismiss: "modal"} %>
        <%=f.submit "Save", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
