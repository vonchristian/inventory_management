<div class="col-md-12">
  <div class="box box-solid">
      <div class="box-header">
        <div class="row">
          <div class="col-md-3">
            <h4 class="box-title">Receivables </h4>
          </div>
          <div class="col-md-6">
          </div>
        </div>

          <hr>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Date </th>
                <th> Name </th>
                <th> Amount </th>
              </tr>
            </thead>
            <tbody>
              <% @orders.order(:date).reverse.each do |order| %>
                <tr>
                  <td><%= order.date.strftime('%B %e, %Y') %></td>
                  <td><%= link_to order.member.try(:full_name) || 'Guest', order %></td>
                  <td> <%= number_to_currency order.line_items.total_price %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
</div>
</div>
        </div>
</div>
