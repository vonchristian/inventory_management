
<ul class="list-unstyled team-members">
  <li id="current_item">
    <div class="row">
      <div class="col-xs-3">
          <small><%=line_item.quantity.to_i %></small>
      </div>
      <div class="col-xs-5">
        <small><%=line_item.stock.name%></small></span>
      </div>
      <div class="col-xs-2 text-right">
        <small>
          <%=number_to_currency line_item.total_cost %>

        </small>
      </div>
      <div class="col-xs-2 pull-right">
        <%=link_to line_item, method: :delete, data: {confirm: 'Are you sure?'} do %>
        <small class='text-danger'><i class="fa fa-times-circle-o fa-2x"></i> </small>
        <% end %>
      </div>
    </div>
    <hr>
  </li>
</ul>
