
<tr>
   <td><small><%=line_item.quantity.to_i %></small></td>
   <td><small><%=line_item.stock.name%></small></td>
   <td class="text-right"><small><%=number_to_currency line_item.total_cost %></small></td>
   <td>
      <%=link_to line_item, method: :delete, data: {confirm: 'Are you sure?'} do %>
        <small class="btn btn-danger btn-xs pull-right" title="Remove"><i class="fa fa-times"></i> </small>
      <% end %>
   </td>
 </tr>
