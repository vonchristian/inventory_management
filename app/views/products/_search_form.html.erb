<div class="row">
  <div class="col-md-3">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <button href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown" aria-expanded="false">
            <%='All Products' if current_page? products_path %>
            <%='Available' if current_page? available_products_path %>
            <%='Low Stock' if current_page? low_stock_products_path %>
            <%='Out of Stock' if current_page? out_of_stock_products_path %> <b class="caret"></b>
        </button>
        <ul class="dropdown-menu dropdown-menu-left">
          <li class="<%='active' if current_page? products_path %>"><%=link_to 'All Products', products_path %></li>
          <li class="<%='active' if current_page? available_products_path %>"><%=link_to 'Available', available_products_path %></li>
          <li class="<%='active' if current_page? low_stock_products_path %>"><%=link_to 'Low Stock', low_stock_products_path %></li>
          <li class="<%='active' if current_page? out_of_stock_products_path %>"><%=link_to 'Out of Stock', out_of_stock_products_path %></li>
        </ul>
      </li>
    </ul>
  </div>
  <div class="col-md-6">
    <%=form_tag products_path, method: :get do %>
      <div class="input-group stylish-input-group">
        <%=text_field_tag :name, params[:name], class: 'form-control', placeholder: 'Search Inventory...'%>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <%=link_to new_product_path, remote: true do %>
      <span class="btn btn-primary btn-icon pull-right"><i class="fa fa-plus"></i> New Product</span>
    <% end %>
  </div>
</div>